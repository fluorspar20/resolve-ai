{
  "name": "merge-conflict-resolver",
  "displayName": "Merge Conflict Resolver",
  "description": "Merge Conflict Resolver automates the resolution of merge conflicts with minimal user intervention",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:merge-conflict-resolver-sidebar"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "merge-conflict-resolver-sidebar-view",
          "title": "Merge Conflict Resolver",
          "icon": "media/merge.svg"
        }
      ]
    },
    "views": {
      "merge-conflict-resolver-sidebar-view": [
        {
          "type": "webview",
          "id": "merge-conflict-resolver-sidebar",
          "name": "Merge Conflict Resolver",
          "icon": "media/merge.svg",
          "contextualTitle": "Merge Conflict Resolver"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsconfig/svelte": "^5.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "rollup": "^2.79.1",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^4.2.14",
    "svelte-check": "^3.6.9",
    "svelte-preprocess": "^5.1.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@google/generative-ai": "^0.7.1",
    "express": "^4.19.2",
    "simple-git": "^3.24.0"
  }
}
